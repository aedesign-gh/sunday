---
---
[
    {% for post in site.posts %}
    {% if post.image %}
    {
      "title"    : "{{ post.title }}",
      "href"     : "{{ post.url }}",
      "img"      : "{{ post.title | replace: ' ', '-' | downcase | replace: '.', '' | replace: ',', '' }}",
      "date"     : {
         "day"   : "{{ post.date | date: "%d" }}",
         "month" : "{{ post.date | date: "%B" }}",
         "year"  : "{{ post.date | date: "%Y" }}"
      }
    }
    {% unless forloop.last %},{% endunless %}
    {% else %}
    {
      "title"    : "{{ post.title }}",
      "href"     : "{{ post.url }}",
      "img"      : "no-prev",
      "date"     : {
         "day"   : "{{ post.date | date: "%d" }}",
         "month" : "{{ post.date | date: "%B" }}",
         "year"  : "{{ post.date | date: "%Y" }}"
      }
    }
    {% unless forloop.last %},{% endunless %}
    {% endif %}
    {% endfor %}
]